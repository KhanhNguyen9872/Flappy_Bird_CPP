{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "64bit build",
            "command": "g++.exe",
            "args": [
                "-m64",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "icon\\icon_x64.res",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build for 64bit"
        },
        {
            "type": "cppbuild",
            "label": "32bit build",
            "command": "g++.exe",
            "args": [
                "-m32",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "icon\\icon_i386.res",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build for 32bit"
        }
    ],
    "version": "2.0.0"
}